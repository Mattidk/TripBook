<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="tripSubHeader">@style/TripSubHeader</item>
        <item name="drawerItem">@drawable/drawer_item</item>
        <item name="navigateUpDrawable">@drawable/ic_arrow_navigate_up_white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Translucent">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Knight Rider theme. -->
    <style name="KnightRider" parent="AppTheme">
        <item name="colorPrimary">@color/knight_primary</item>
        <item name="colorPrimaryDark">@color/knight_primary_dark</item>
        <item name="colorAccent">@color/knight_accent</item>
        <item name="android:textColorPrimary">@color/knight_primary_text</item>
        <item name="android:textColorSecondary">@color/knight_secondary_text</item>
        <item name="android:windowBackground">@color/knight_background</item>
        <item name="android:colorBackground">@color/knight_primary</item>
        <item name="tripSubHeader">@style/TripSubHeaderDark</item>
        <item name="drawerItem">@drawable/drawer_item_dark</item>
        <item name="navigateUpDrawable">@drawable/ic_arrow_navigate_up_white</item>
    </style>

    <style name="KnightRider.Translucent">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_move_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_move_right</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_out_right</item>
    </style>

    <style name="TripBook.Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
    </style>

    <style name="TripBook.Button.AccountChooser">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">@dimen/auth_method_button_drawablePadding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_marginBottom">@dimen/auth_method_button_marginBottom</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TripBook.Button.AccountChooser.GoogleButton">
        <item name="android:drawableLeft">@drawable/ic_googleg_color_24dp</item>
        <item name="android:background">@drawable/idp_button_background_google</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="TripBook.Button.AccountChooser.FacebookButton">
        <item name="android:drawableLeft">@drawable/ic_facebook_white_22dp</item>
        <item name="android:background">@drawable/idp_button_background_facebook</item>
        <item name="android:textColor">@color/com_facebook_button_text_color</item>
    </style>

    <style name="TripBook.Button.AccountChooser.EmailButton">
        <item name="android:background">@drawable/idp_button_background_email</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="TripSubHeader">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="TripSubHeaderDark">
        <item name="android:background">@color/knight_primary</item>
    </style>

</resources>
